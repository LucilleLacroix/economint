<div class="bg-white p-6 shadow-md rounded-lg">
  <h1 class="text-2xl font-bold mb-4">Détails du revenu</h1>

  <p><strong>Date :</strong> <%= @revenue.date %></p>
  <p><strong>Montant :</strong> <span class="text-green-600 font-semibold"><%= number_to_currency(@revenue.amount) %></span></p>
  <p><strong>Catégorie :</strong> <%= @revenue.category&.name %></p>
  <p><strong>Description :</strong> <%= @revenue.description %></p>

  <div class="mt-6 flex space-x-4">
    <%= link_to "Modifier", edit_revenue_path(@revenue), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    <%= link_to "Supprimer", revenue_path(@revenue), method: :delete, data: { confirm: "Supprimer ce revenu ?" }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" %>
    <%= link_to "← Retour", revenues_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300" %>
  </div>
</div>
