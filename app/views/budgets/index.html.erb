<h1>Mes budgets</h1>
<div style="margin-top: 1rem; text-align: center;">
  <%= link_to "Nouveau budget", new_budget_path, class: "btn btn-info " %>
</div>

<div id="goals_table">
  <table>
    <thead>
      <tr>
        <th>Catégorie</th>
        <th>Période</th>
        <th>Dépenses sur la période</th>
        <th>Optimiste</th>
        <th>Réaliste</th>
        <th>Pessimiste</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="budgets">
      <%= render partial: "budget_row", collection: @budgets, as: :budget %>
    </tbody>
  </table>
</div>
