<%= form_with(model: expense, local: true) do |f| %>
  <div style="margin-bottom:15px;">
    <%= f.label :category_id, "Catégorie" %><br>
    <%= f.select :category_id, categories.map { |c| [c.name, c.id] }, prompt: "Sélectionner une catégorie", class: "form-control" %>
  </div>

  <div style="margin-bottom:15px;">
    <%= f.label :amount, "Montant" %><br>
    <%= f.number_field :amount, step: 0.01, class: "form-control", placeholder: "Ex: 12.50" %>
  </div>

  <div style="margin-bottom:15px;">
    <%= f.label :description, "Description" %><br>
    <%= f.text_field :description, class: "form-control", placeholder: "Ex: Déjeuner" %>
  </div>

  <div style="margin-bottom:15px;">
    <%= f.label :date, "Date" %><br>
    <%= f.date_field :date, value: expense.date || Date.today, class: "form-control" %>
  </div>

  <div style="text-align:center; margin-top:20px;">
    <%= f.submit expense.new_record? ? "Ajouter la dépense" : "Mettre à jour", class: "btn btn-primary" %>
    <%= link_to "Annuler", expenses_path, class: "btn btn-secondary", style: "margin-left:10px;" %>
  </div>
<% end %>
