<turbo-frame id="category_form">

<%= form_with model: category, url: category.new_record? ? categories_path(category_type: category_type) : category_path(category), local: false do |f| %>
  <div class="form-field">
    <%= f.label :name, "Nom de la catégorie" %>
    <%= f.text_field :name, placeholder: "Ex: Transport", required: true %>
  </div>

  <div class="form-field">
    <%= f.label :color, "Couleur" %>
    <%= f.color_field :color, value: category&.color || "#4db6ac" %>
  </div>

  <div class="form-actions">
    <%= f.submit category.new_record? ? "Créer" : "Mettre à jour", class: "btn-main" %>
    <%= link_to "Annuler", categories_path(category_type: category_type), class: "btn-cancel" %>
  </div>
<% end %>
</turbo-frame>
