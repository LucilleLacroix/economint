<!-- Checkbox caché qui contrôle la sidebar -->
  <input type="checkbox" id="menu-toggle" class="menu-toggle" hidden>

  <!-- Label qui sert de bouton -->
  <label for="menu-toggle" class="menu-btn">☰</label>

  <!-- Sidebar -->
  <nav id="sidebar" class="sidebar">
    <div class="sidebar-header">
      <%= link_to "Économint", root_path, class: "sidebar-title" %>
    </div>

    <ul class="sidebar-links">
      <% if user_signed_in? %>
        <li><%= link_to "Profil", edit_user_registration_path %></li>
        <li><%= link_to "Déconnexion", destroy_user_session_path,
                        method: :delete,
                        data: { turbo_method: :delete, confirm: "Voulez-vous vraiment vous déconnecter ?" } %></li>
      <% else %>
        <li><%= link_to "Connexion", new_user_session_path %></li>
        <li><%= link_to "Inscription", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
