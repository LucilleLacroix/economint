<!-- Checkbox pour le toggle du menu -->
<input type="checkbox" id="menu-toggle" class="menu-toggle" hidden>

<!-- Top Navbar -->
<nav class="top-navbar">
  <div class="nav-left">
    <!-- Bouton menu -->
    <label for="menu-toggle" class="menu-btn">☰</label>
  </div>

  <div class="nav-center">
    <!-- Titre / lien vers la home page -->
    <%= link_to "Économint", root_path, class: "sidebar-title" %>
  </div>

  <div class="nav-right">
    <% if user_signed_in? %>
      <div class="user-dropdown">
        <span class="nav-user">Bonjour, <%= current_user.username %></span>
        <ul class="dropdown-menu">
          <li><%= link_to "Profil", edit_user_registration_path %></li>
          <li>
            <%= link_to "Déconnexion", destroy_user_session_path,
                        method: :delete,
                        data: { turbo_method: :delete, confirm: "Voulez-vous vraiment vous déconnecter ?" } %>
          </li>
        </ul>
      </div>
    <% else %>
      <%= link_to "Connexion", new_user_session_path, class: "nav-user" %>
      <%= link_to "Inscription", new_user_registration_path, class: "nav-user" %>
    <% end %>
  </div>
</nav>

<!-- Sidebar -->
<div class="sidebar">
  <ul class="sidebar-links">
    <li><%= link_to "Expenses", expenses_path %></li>
    <li><%= link_to "Revenues", revenues_path %></li>
    <li><%= link_to "Goals", goals_path %></li>
  </ul>
</div>
