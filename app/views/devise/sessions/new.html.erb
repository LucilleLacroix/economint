<div class="edit-account-page">
  <div class="edit-form-card">
    <h1>Connexion</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Adresse e-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </div>

      <div class="actions">
        <%= f.submit "Se connecter", class: "btn" %>
      </div>
    <% end %>

    <hr>

    <p>Pas encore de compte ? <%= link_to "Créer un compte", new_registration_path(resource_name), class: "link" %></p>
    <%= link_to "Retour à l'accueil", root_path, class: "back-home" %>
  </div>
</div>
