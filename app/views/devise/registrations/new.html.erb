<div class="edit-account-page">
  <div class="edit-form-card">
    <h1>Créer un compte</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :username, "Nom d'utilisateur" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Adresse e-mail" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %> caractères minimum)</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Créer mon compte", class: "btn" %>
      </div>
    <% end %>

    <hr>

    <p>Déjà inscrit ? <%= link_to "Se connecter", new_session_path(resource_name), class: "link" %></p>
    <%= link_to "Retour à l'accueil", root_path, class: "back-home" %>
  </div>
</div>
