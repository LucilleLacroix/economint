<div class="soft-form">
  <h2>Nouvel Objectif</h2>

  <%= form_with model: @goal, local: true do |f| %>
    <div class="form-field">
      <%= f.label :title, "Titre" %>
      <%= f.text_field :title, placeholder: "Ex : Vacances à Rome" %>
    </div>

    <div class="form-field">
      <%= f.label :target_amount, "Montant cible (€)" %>
      <%= f.number_field :target_amount, step: "0.01", min: "0", placeholder: "Ex : 1000" %>
    </div>

    <div class="form-field">
      <%= f.label :deadline, "Échéance" %>
      <%= f.date_field :deadline %>
    </div>

    <div class="form-actions">
      <%= f.submit "Créer", class: "btn btn-info" %>
      <%= link_to "Annuler", goals_path, class: "btn btn-info" %>
    </div>
  <% end %>
</div>
