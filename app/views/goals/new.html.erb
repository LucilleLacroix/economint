<h2>Nouvel Objectif</h2>

<%= form_with model: @goal, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "Titre" %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :target_amount, "Montant cible (€)" %>
    <%= f.number_field :target_amount, step: "0.01", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :deadline, "Échéance" %>
    <%= f.date_field :deadline, class:"form-control" %>
  </div>

  <%= f.submit "Créer", class:"btn btn-primary" %>
<% end %>
