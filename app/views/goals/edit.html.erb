
<!-- Message flash -->
<% if flash[:notice] %>
  <div class="flash-message success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="flash-message error"><%= flash[:alert] %></div>
<% end %>

<!-- Formulaire -->
<div class="goal-edit-container">
  <%= form_with model: @goal, local: true do |f| %>

    <div class="form-group">
      <%= f.label :title, "Titre de l’objectif" %>
      <%= f.text_field :title, class:"input-field", required: true, placeholder:"Ex: Vacances à Rome" %>
    </div>

    <div class="form-group">
      <%= f.label :target_amount, "Montant à atteindre (€)" %>
      <%= f.number_field :target_amount, step:"0.01", min:"0", class:"input-field", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :current_amount, "Montant déjà épargné (€)" %>
      <%= f.number_field :current_amount, step:"0.01", min:"0", class:"input-field" %>
    </div>

    <div class="form-group">
      <%= f.label :deadline, "Date limite" %>
      <%= f.date_field :deadline, class:"input-field" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Mettre à jour", class:"btn-primary" %>
      <%= link_to "Annuler", goals_path, class:"btn-secondary" %>
    </div>

  <% end %>
</div>
